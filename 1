def check_prime(n):
    if n == 1 or n==0:
        return False
    if n <= 3:
        return True
    if n % 2 == 0 or n % 3 == 0:
        return False
    i = 5
    while i * i <= n:
        if n % i == 0 or n % (i + 2) == 0:
            return False
        i += 6
    return True
def digits_in_ascending_order(num):
    digits = str(num)
    return all(digits[i] < digits[i + 1] for i in range(len(digits) - 1))
def next_ascending_number(num):
    a = num + 1
    while True:
        if digits_in_ascending_order(a):
            return next_digits_in_ascending_order(a)
        a += 1
def next_digits_in_ascending_order(num):
    if digits_in_ascending_order(num):
        digits=[int(i) for i in str(num)]
        return digits
def exercise_3(n):
    b = n + 1
    while True:
        if check_prime(b):
            print(b)
            print(next_ascending_number(b))
            return
        b += 1
exercise_3(500)
